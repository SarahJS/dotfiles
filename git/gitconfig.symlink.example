[hub]
    protocol = https
[credential]
    helper = osxkeychain
[alias]
    st = status -sb
    lg = log --graph --decorate --oneline
    lga = log --graph --decorate --oneline --all
    co = checkout
    promote = !~/.dotfiles/bin/git-promote
    wtf     = !~/.dotfiles/bin/git-wtf
    rank-contributors = !$ZSH/bin/git-rank-contributors
    count   = shortlog -sn
    clear = !rm -r $(git status --porcelain | grep '^??' | sed s/^...//)
    checkout-all = !(cd ./$(git rev-parse --show-cdup) && git checkout -- $(git status --porcelain | grep -v ^?? | sed s/^...//))
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[core]
    excludesfile = ~/.gitignore
    editor = vim
[help]
    autocorrect = 1
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
[push]
	default = simple
[mergetool]
	keepBackup = false
[diff "spaceman-diff"]
    command = ~/.gitignore/bin/spaceman-diff
